{
  "": {
    "controller": "Post",
    "method": "getAll"
  },

  "signin": {
    "controller": "User",
    "method": "signin"
  },

  "login": {
    "controller": "User",
    "method": "login"
  },

  "logout": {
    "controller": "User",
    "method": "logout",
    "login": true
  },

  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPage",
    "params": {
      "page": "number"
    }
  },

  "post/:id": {
    "controller": "Post",
    "method": "get",
    "params": {
      "id": "number"
    }
  },

  "post/category/:id": {
    "controller": "Post",
    "method": "searchCategories",
    "params": {
      "id": "number"
    }
  },

  "post/search": {
    "controller": "Post",
    "method": "search"
  },

  "admin": {
    "controller": "Admin",
    "method": "dashboard",
    "login": true
  },

  "admin/post/create": {
    "controller": "Admin",
    "method": "createPost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/post/:id/edit": {
    "controller": "Admin",
    "method": "editPost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/post/:id/update": {
    "controller": "Admin",
    "method": "updatePost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/post/:id/delete": {
    "controller": "Admin",
    "method": "deletePost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/tag/create": {
    "controller": "Admin",
    "method": "createTag",
    "login": true
  },

  "admin/tag/:id/edit": {
    "controller": "Admin",
    "method": "editTag",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/tag/:id/update": {
    "controller": "Admin",
    "method": "updateTag",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "admin/tag/:id/delete": {
    "controller": "Admin",
    "method": "deleteTag",
    "login": true,
    "params": {
      "id": "number"
    }
  }

}
