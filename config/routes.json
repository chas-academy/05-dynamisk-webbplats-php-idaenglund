{
  "": {
    "controller": "Post",
    "method": "getAll"
  },

  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPage",
    "params": {
      "page": "number"
    }
  },

  "login": {
    "controller": "User",
    "method": "login"
  },

  "logout": {
    "controller": "User",
    "method": "logout",
    "login": true
  },

  "post/create": {
    "controller": "Post",
    "method": "createPost",
    "login": true
  },

  "post/:id": {
    "controller": "Post",
    "method": "readPost",
    "params": {
      "id": "number"
    }
  },

  "post/:id/edit": {
    "controller": "Post",
    "method": "editPost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "post/:id/update": {
    "controller": "Post",
    "method": "updatePost",
    "login": true,
    "params": {
      "id": "number"
    }
  },

  "post/:id/delete": {
    "controller": "Post",
    "method": "deletePost",
    "login": true,
    "params": {
      "id": "number"
    }
  }
}
